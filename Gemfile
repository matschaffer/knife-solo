source :rubygems
gemspec

group :test do
  gem 'rake'
  gem 'minitest', :require => 'minitest/autorun'
  gem 'mocha', :require => 'mocha/setup'
end

group :development do
  gem 'debugger',   :platforms => :mri_19
  gem 'ruby-debug', :platforms => :mri_18
  gem 'parallel'
  gem 'fog'
  gem 'pry'
end
